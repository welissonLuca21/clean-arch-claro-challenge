{
  "name": "claro-challenge-api",
  "version": "1.0.0",
  "license": "ISC",
  "main": "./dist/src/server.js",
  "engines": {
    "node": "18.x"
  },
  "scripts": {
    "start": "node dist/src/server.js",
    "dev": "nodemon",
    "build": "rimraf dist && tsc -p tsconfig-build.json",
    "lint": "eslint src/** --ext .ts --max-warnings=0",
    "lint:fix": "eslint src/** --ext .ts --fix",
    "postinstall": "yarn build",
    "test": "jest --verbose",
    "ci": "npm run lint:fix && npm test",
    "postrelease": "git push --follow-tags origin",
    "version": "standard-version --dry-run",
    "release": "standard-version"
  },
  "prisma": {
    "schema": "src/infra/db/schema.prisma",
    "seed": "ts-node src/infra/db/seeds/index.ts"
  },
  "devDependencies": {
    "@commitlint/cli": "^17.6.5",
    "@commitlint/config-conventional": "^17.6.5",
    "@types/jest": "^29.5.1",
    "@types/jsonwebtoken": "^9.0.2",
    "@types/module-alias": "^2.0.1",
    "@types/node": "^16.11.9",
    "@types/uuid": "^9.0.1",
    "@typescript-eslint/eslint-plugin": "^5.4.0",
    "@typescript-eslint/parser": "^5.4.0",
    "babel-jest": "^29.5.0",
    "cz-conventional-changelog": "^3.3.0",
    "eslint": "^8.3.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-prettier": "^4.0.0",
    "husky": "^8.0.3",
    "jest": "^29.5.0",
    "jest-config": "^29.5.0",
    "lint-staged": "^13.2.2",
    "nodemon": "^2.0.15",
    "prettier": "^2.4.1",
    "rimraf": "^3.0.2",
    "standard-version": "^9.5.0",
    "ts-jest": "^29.1.0",
    "ts-node": "^10.4.0",
    "typescript": "^4.5.2"
  },
  "dependencies": {
    "@prisma/client": "4.14.0",
    "@sendgrid/mail": "^7.7.0",
    "bcrypt": "^5.1.0",
    "cors": "^2.8.5",
    "date-fns": "^2.30.0",
    "dotenv": "^10.0.0",
    "express": "^4.17.1",
    "graphql": "^16.0.1",
    "helmet": "^7.0.0",
    "jsonwebtoken": "^9.0.0",
    "module-alias": "^2.2.2",
    "prisma": "^4.14.0",
    "reflect-metadata": "^0.1.13",
    "typedi": "^0.10.0",
    "uuid": "^9.0.0"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "pre-push": "npm test"
    }
  },
  "lint-staged": {
    "*.{js,ts,json,css,md}": [
      "prettier --write"
    ],
    "*.ts": [
      "npm run lint",
      "npm run test -- --findRelatedTests --passWithNoTests"
    ]
  }
}
